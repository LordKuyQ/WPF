<Window x:Class="SEP_Age.AddMeasurementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEP_Age"
        mc:Ignorable="d"
        Title="AddMeasurementWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Давление:" Grid.Row="0" Margin="5"/>
        <TextBox x:Name="PressureTextBox" Grid.Row="0" Margin="70,5,5,5"/>
        <Label Content="Описание:" Grid.Row="1" Margin="5"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="1" Margin="70,5,5,5" Height="50" TextWrapping="Wrap"/>
        <Label Content="Абсолютная высота:" Grid.Row="2" Margin="5"/>
        <TextBox x:Name="AbsoluteHeightTextBox" Grid.Row="2" Margin="70,5,5,5"/>
        <Label Content="Расстояние:" Grid.Row="3" Margin="5"/>
        <TextBox x:Name="DistanceTextBox" Grid.Row="3" Margin="70,5,5,5"/>
        <Label Content="Пункт наблюдения:" Grid.Row="4" Margin="5"/>
        <ComboBox x:Name="ObservationPointComboBox" Grid.Row="4" Margin="70,5,5,5" DisplayMemberPath="Id"/>
        <Button Content="Сохранить" Grid.Row="5" Margin="5" Click="SaveButton_Click"/>
    </Grid>
</Window>
