<Window x:Class="SEP_Age.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEP_Age"
        mc:Ignorable="d"
        Title="MainWindow" Height="768 " Width="1366">
    
    <Grid Margin="0,10,0,0" x:Name="Base">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Label Content="Проекты" FontSize="16" FontWeight="Bold"/>
                <DataGrid x:Name="проектыGrid" Margin="0,32,0,0" ItemsSource="{Binding проекты}" MouseDoubleClick="проектыGrid_MouseDoubleClick"/>
            </Grid>

            <Grid Grid.Column="1" Margin="0,0,10,0">
                <Label Content="Площади" FontSize="16" FontWeight="Bold"/>
                <DataGrid x:Name="площадиGrid" Margin="0,32,0,0" ItemsSource="{Binding площади}" MouseDoubleClick="площадиGrid_MouseDoubleClick"/>
            </Grid>

            <Grid Grid.Column="2" Margin="0,0,10,0">
                <Label Content="Профили" FontSize="16" FontWeight="Bold"/>
                <DataGrid x:Name="профилиGrid" Margin="0,32,0,0" ItemsSource="{Binding профили}" MouseDoubleClick="профилиGrid_MouseDoubleClick"/>
            </Grid>

            <Grid Grid.Column="3" Margin="0,0,10,0">
                <Label Content="Пункты наблюдения" FontSize="16" FontWeight="Bold"/>
                <DataGrid x:Name="пунктыНаблюденияGrid" Margin="0,32,0,0" ItemsSource="{Binding пунктыНаблюдения}" MouseDoubleClick="пунктыНаблюденияGrid_MouseDoubleClick"/>
            </Grid>
        </Grid>


        <Grid Grid.Column="1" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Label Content="Измерения" FontSize="16" FontWeight="Bold"/>
                <DataGrid x:Name="измеренияGrid" Margin="0,32,0,0" ItemsSource="{Binding измерения}"/>
            </Grid>
            <DataGrid Grid.Row="1" x:Name="кордыGrid" Margin="0,32,0,0"/>
        </Grid>
    </Grid>
</Window>
